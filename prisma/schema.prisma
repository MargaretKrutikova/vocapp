datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["darwin-arm64", "debian-openssl-1.1.x"]
}

type VocItem {
    value    String
    language String
}

model VocValue {
    id           String      @id @default(auto()) @map("_id") @db.ObjectId
    tenant       String
    value        String
    language     String
    imageUrl     String?
    translations VocItem[]
    explanations VocItem[]
    usages       VocItem[]
    dateAdded    DateTime
    dateUpdated  DateTime?
    FlashCard    FlashCard[]
}

model FlashCard {
    vocValue       VocValue @relation(fields: [vocValueId], references: [id])
    vocValueId     String   @id @map("_id") @db.ObjectId
    bucket         Int
    eFactor        Float
    interval       Float
    nextReviewDate DateTime
    tenant         String
    account        String
    isActive       Boolean
}
